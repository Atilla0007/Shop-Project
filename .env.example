# Production environment example (.env)
# Create a real .env on the server and keep it out of git.

# Core
SECRET_KEY=change-me
DEBUG=false
ALLOWED_HOSTS=styra.ir,www.styra.ir
CSRF_TRUSTED_ORIGINS=https://styra.ir,https://www.styra.ir
SITE_BASE_URL=https://styra.ir

# Database (MySQL for cPanel)
DB_ENGINE=django.db.backends.mysql
DB_NAME=cpanel_db_name
DB_USER=cpanel_db_user
DB_PASSWORD=cpanel_db_password
DB_HOST=localhost
DB_PORT=3306
DB_CONN_MAX_AGE=60
USE_PYMYSQL=true

# Static & media (public_html)
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/home/CPANEL_USER/public_html/static
MEDIA_ROOT=/home/CPANEL_USER/public_html/media

# Security
SECURE_PROXY_SSL_HEADER=true
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
X_FRAME_OPTIONS=DENY
SECURE_REFERRER_POLICY=same-origin
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# Email (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=styra.steel@gmail.com

# Optional dev file backend
#EMAIL_BACKEND=django.core.mail.backends.filebased.EmailBackend
#EMAIL_FILE_PATH=/home/CPANEL_USER/tmp/emails

# Branding / Invoice
SITE_NAME=Styra
ABOUT_TEMPLATE=about.html
# Use \n for multi-line
COMPANY_ADDRESS=Iran, Tehran, Ferdowsieh, Shahrayar St
COMPANY_PHONE=09149911383
COMPANY_EMAIL=styra.steel@gmail.com
COMPANY_TELEGRAM=styra_steel

# Receipt maintenance (default: 2 hours = 7200 seconds)
RECEIPT_PURGE_DELAY_SECONDS=7200

# Authentication security (login brute-force protection)
AUTH_SECURITY_LOGIN_PATHS=/login/,/admin/login/
AUTH_SECURITY_PROTECTED_PATHS=/auth/email-otp/verify/,/auth/phone-otp/verify/,/password-reset/,/password_reset/
AUTH_SECURITY_TRUST_X_FORWARDED_FOR=false
AUTH_SECURITY_LOGIN_IP_MAX_ATTEMPTS=10
AUTH_SECURITY_LOGIN_IP_WINDOW_SECONDS=600
AUTH_SECURITY_LOGIN_IP_BLOCK_AFTER_ATTEMPTS=10
AUTH_SECURITY_IP_BLOCK_SECONDS=1800
AUTH_SECURITY_LOGIN_IDENTIFIER_MAX_ATTEMPTS=5
AUTH_SECURITY_LOGIN_IDENTIFIER_WINDOW_SECONDS=600

# SMS backend (provider later)
SMS_BACKEND=console
#KAVENEGAR_API_KEY=
#KAVENEGAR_SENDER=

# Email OTP defaults
EMAIL_OTP_LENGTH=6
EMAIL_OTP_TTL_SECONDS=300
EMAIL_OTP_RESEND_COOLDOWN_SECONDS=60
EMAIL_OTP_MAX_SEND_PER_WINDOW=3
EMAIL_OTP_SEND_WINDOW_SECONDS=600
EMAIL_OTP_MAX_VERIFY_ATTEMPTS=5

# SMS OTP defaults
SMS_OTP_LENGTH=6
SMS_OTP_TTL_SECONDS=300
SMS_OTP_RESEND_COOLDOWN_SECONDS=60
SMS_OTP_MAX_SEND_PER_WINDOW=3
SMS_OTP_SEND_WINDOW_SECONDS=600
SMS_OTP_MAX_VERIFY_ATTEMPTS=5
